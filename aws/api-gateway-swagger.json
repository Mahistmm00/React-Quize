{
  "swagger": "2.0",
  "info": {
    "title": "QuizMaster API",
    "version": "1.0.0"
  },
  "host": "your-api-id.execute-api.region.amazonaws.com",
  "basePath": "/dev",
  "schemes": ["https"],
  "paths": {
    "/sections": {
      "get": {
        "summary": "Get all quiz sections",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "object",
              "properties": {
                "sections": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "sectionId": {"type": "string"},
                      "title": {"type": "string"},
                      "description": {"type": "string"},
                      "questionCount": {"type": "number"},
                      "totalPoints": {"type": "number"}
                    }
                  }
                }
              }
            }
          }
        },
        "x-amazon-apigateway-integration": {
          "type": "aws_proxy",
          "httpMethod": "POST",
          "uri": "arn:aws:apigateway:region:lambda:path/2015-03-31/functions/arn:aws:lambda:region:account:function:getSections/invocations"
        }
      },
      "post": {
        "summary": "Create new quiz section",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "section",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {"type": "string"},
                "description": {"type": "string"},
                "questions": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "question": {"type": "string"},
                      "options": {"type": "array", "items": {"type": "string"}},
                      "correctOption": {"type": "number"},
                      "points": {"type": "number"}
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Section created successfully"
          }
        },
        "x-amazon-apigateway-integration": {
          "type": "aws_proxy",
          "httpMethod": "POST",
          "uri": "arn:aws:apigateway:region:lambda:path/2015-03-31/functions/arn:aws:lambda:region:account:function:addSection/invocations"
        }
      },
      "options": {
        "summary": "CORS preflight",
        "responses": {
          "200": {
            "description": "Success"
          }
        },
        "x-amazon-apigateway-integration": {
          "type": "mock",
          "requestTemplates": {
            "application/json": "{\"statusCode\": 200}"
          },
          "responses": {
            "default": {
              "statusCode": "200",
              "responseParameters": {
                "method.response.header.Access-Control-Allow-Headers": "'Content-Type,X-Amz-Date,Authorization,X-Api-Key,X-Amz-Security-Token'",
                "method.response.header.Access-Control-Allow-Methods": "'GET,POST,OPTIONS'",
                "method.response.header.Access-Control-Allow-Origin": "'*'"
              }
            }
          }
        }
      }
    },
    "/sections/{sectionId}/questions": {
      "get": {
        "summary": "Get questions for a section",
        "parameters": [
          {
            "name": "sectionId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Success"
          }
        },
        "x-amazon-apigateway-integration": {
          "type": "aws_proxy",
          "httpMethod": "POST",
          "uri": "arn:aws:apigateway:region:lambda:path/2015-03-31/functions/arn:aws:lambda:region:account:function:getQuestions/invocations"
        }
      }
    }
  }
}